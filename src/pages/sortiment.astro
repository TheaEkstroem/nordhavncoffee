---
import Kaffe from "../components/Kaffe.astro";
import MainLayout from "../layouts/MainLayout.astro";
import Link from "../components/Link.astro";
---

<MainLayout title="sortiment">
  <div>
    <h1 class="font-medium text-7xl pb-xl">VORES SORTIMENT</h1>

    <ul class="flex space-x-4 gap-xs">
      <li>
        <Link size="medium" variant="textlink" size="medium" href="/sortiment"
          >Single poser</Link
        >
      </li>
      <li>
        <Link size="medium" variant="textlink" size="medium" href="/Kaffepakker"
          >Pakkel√∏sning</Link
        >
      </li>
    </ul>
    <!-- Kaffesektioner -->
    <section id="kaffe-1">
      <Kaffe
        navn="MARCALA"
        udAf="1/4"
        bgcolor="bg-brand-blue"
        bordercolor="border-brand-yellow"
        bghovercolor="hover:bg-brand-yellow"
        texthovercolor="hover:text-brand-blue"
        textcolor="text-brand-yellow"
        currentSection={1}
        totalSections={4}
      />
    </section>

    <section id="kaffe-2">
      <Kaffe
        navn="BLEND NO3"
        udAf="2/4"
        bgcolor="bg-brand-purple"
        bordercolor="border-brand-rosa"
        bghovercolor="hover:bg-brand-rosa"
        texthovercolor="hover:text-brand-purple"
        textcolor="text-brand-rosa"
        currentSection={2}
        totalSections={4}
      />
    </section>

    <section id="kaffe-3">
      <Kaffe
        navn="HAVENS BLEND"
        udAf="3/4"
        bgcolor="bg-brand-yellow"
        bordercolor="border-brand-blue"
        bghovercolor="hover:bg-brand-blue"
        texthovercolor="hover:text-brand-yellow"
        textcolor="text-brand-blue"
        currentSection={3}
        totalSections={4}
      />
    </section>

    <section id="kaffe-4">
      <Kaffe
        navn="CAJAMARCA"
        udAf="4/4"
        bgcolor="bg-brand-rosa"
        bordercolor="border-brand-purple"
        bghovercolor="hover:bg-brand-purple"
        texthovercolor="hover:text-brand-rosa"
        textcolor="text-brand-purple"
        currentSection={4}
        totalSections={4}
      />
    </section>
  </div>
</MainLayout>
