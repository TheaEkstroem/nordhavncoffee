---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
import Kaffe from "../components/Kaffe.astro";
---

<MainLayout title="Titel">
  <article>
    <h1>Index overskrift</h1>
    <Button>Klik!</Button>
    <p>
      Link til <Link href="https://www.kea.dk" target="_blank"
        >En anden side</Link
      >
    </p>
    <Image src={thumbsup} alt="" />

    <Kaffe
      navn="MARCALA"
      ,
      udAf="1/4"
      ,
      bgcolor="bg-brand-blue"
      ,
      btncolor="bg-brand-yellow"
    />
    <Kaffe navn="BLEND NO3" , udAf="2/4" , bgcolor="bg-brand-purple" />
    <Kaffe navn="HAVENS BLEND" , udAf="3/4" , bgcolor="bg-brand-yellow" />
    <Kaffe
      navn="CAJAMARCA"
      ,
      udAf="4/4"
      ,
      bgcolor="bg-brand-rosa"
      ,
      txcolor="text-yellow-500"
    />
  </article>
</MainLayout>
