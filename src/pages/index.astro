---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import Historie1 from "../assets/images/historie/historie1.webp";
import Historie2 from "../assets/images/historie/historie2.webp";
import Kaffebønne1 from "../assets/images/kaffebønner/kaffebønne1.webp";
import Kaffebønne2 from "../assets/images/kaffebønner/kaffebønne2.webp";
import Kaffebønne3 from "../assets/images/kaffebønner/kaffebønne3.webp";
import Marcala from "../assets/images/kaffe/marcala.webp";
import Cajamarca from "../assets/images/kaffe/cajamarca.webp";
import Modernespresso from "../assets/images/kaffe/modernitalianespresso.webp";

const {
  navn1 = "MARCALA",
  bordercolor1 = "border-brand-yellow",
  bgcolor1 = "bg-brand-blue",
  bgcolor3 = "bg-brand-yellow",
  bghovercolor1 = "hover:bg-brand-yellow",
  bghovercolor3 = "hover:bg-brand-blue",
  textcolor1 = "text-brand-yellow",
  textcolor3 = "text-brand-blue",
  texthovercolor1 = "hover:text-brand-blue",
  texthovercolor3 = "hover:text-brand-yellow",
} = Astro.props;
---

<MainLayout title="Nordhavn Coffee">
  <article>
    <section>
      <div class="parallaxgrafik relative h-[600px] md:h-screen w-full">
        <!-- desktophero billeder -->
        <div
          class="absolute inset-0 w-full h-full grid grid-cols-7 grid-span-2 grid-rows-6"
        >
          <img
            src="/kaffebønner.webp"
            alt="bønner"
            class="md:w-[250px] h-auto object-cover md:rotate-[180deg] md:row-start-[-1] md:col-start-5 z-30 hidden md:block"
          />
          <Image
            class="w-[150px] h-auto md:rotate-[20deg] md:row-start-1 md:col-start-5 object-fit pb-s mt-xs z-10 hidden md:block"
            src={Marcala}
            alt="Marcala"
          />

          <img
            src="/kaffebønner.webp"
            alt="bønner"
            class="w-[100px] md:w-[250px] h-auto object-cover md:rotate-[45deg] md:col-start-6 z-15 hidden md:block"
          />

          <Image
            class="w-[100px] md:w-100px md:rotate-[-10deg] md:row-start-3 md:col-start-6 h-auto object-fit pb-s mt-xs col-span-1 z-35 hidden md:block"
            src={Modernespresso}
            alt="Modernespresso"
          />

          <img
            src="/kaffebønner.webp"
            alt="bønner"
            class="w-[100px] md:w-[250px] h-auto object-cover md:rotate-[-45deg] md:col-start-5 md:row-start-4 z-20 hidden md:block"
          />

          <Image
            class="w-[150px] md:w-160px md:rotate-[10deg] md:row-start-5 md:col-start-5 h-auto object-fit pb-s mt-xs col-span-1 z-15 hidden md:block"
            src={Cajamarca}
            alt="Cajamarca"
          />

          <img
            src="/kaffebønner.webp"
            alt="bønner"
            class="w-[100px] md:w-[250px] h-auto object-cover md:row-start-5 md:col-start-6 z-20 hidden md:block"
          />
          <!-- desktophero billeder -->
          <!-- mobilehero billeder -->

          <Image
            src={Kaffebønne1}
            alt="bønne"
            class="col-start-6 parallaxgrafik1_4 md:hidden"
          />
          <Image
            src={Kaffebønne2}
            alt="bønne"
            class="col-start-5 parallaxgrafik2_4 md:hidden"
          />
          <Image
            src={Kaffebønne2}
            alt="bønne"
            class="col-start-8 parallaxgrafik3_4 md:hidden"
          />
          <Image
            src={Kaffebønne1}
            alt="bønne"
            class="col-start-3 col-span-2 parallaxgrafik4_4 md:hidden"
          />
          <Image
            src={Kaffebønne2}
            alt="bønne"
            class="col-start-9 parallaxgrafik5_4 md:hidden"
          />
        </div>
        <div class="absolute inset-0 grid grid-cols-10 grid-rows-4">
          <h1 class="row-start-2 col-start-2">NORDHAVN COFFEE</h1>
          <div
            class="row-start-3 col-start-2 md:row-start-3 md:col-start-1 col-span-4 flex justify-center mt-10"
          >
            <Link size="medium" variant="textlink" href="/sortiment">
              <button
                class="px-xl py-xs border-2 font-futura font-bold text-xl bg-rosa-900 text-beige-50 transition"
              >
                Find abonnement
                <span class="ml-2">→</span>
              </button>
            </Link>
          </div>
        </div>
      </div>
    </section>
    <section
      class="bg-background-beige flex-col justify-center px-s md:px-2xl py-3xl grid grid-cols-1 md:grid-cols-3 gap-xl md:py-3xl z-50"
    >
      <div>
        <div class="relative w-[378px] h-[396px]">
          <!-- SVG background -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 378 396"
            class="absolute inset-0 w-full h-full"
            fill="none"
          >
            <path
              d="M378 396H0V0H221.642C241.509 0 257.614 16.105 257.614 35.9716C257.614 75.7047 289.824 107.915 329.557 107.915H338C360.091 107.915 378 125.823 378 147.915V396Z"
              fill="#6C4852"></path>
          </svg>

          <!-- Tal "1" -->
          <div
            class="absolute top-xxxs right-xs w-3xl h-3xl bg-brand-yellow rounded-full"
          >
          </div>
        </div>
        <div>
          <h3>Besøg vores café</h3>
          <div class="gap-ml py-xs">
            <p>
              Kom forbi vores hyggelige kaffebar og smag på de friskristede
              bønner. Georg Brandes Plads 2, 1307 København, Denmark
            </p>
          </div>
        </div>
      </div>

      <div>
        <div class="relative w-[378px] h-[396px]">
          <svg
            xmlns="/public/download(1).webp"
            width="378"
            height="396"
            viewBox="0 0 378 396"
            fill="none"
            class="absolute inset-0 w-full h-full"
          >
            <path
              d="M378 0H0V396H221.642C241.509 396 257.614 379.895 257.614 360.028C257.614 320.295 289.824 288.085 329.557 288.085H338C360.091 288.085 378 270.177 378 248.085V0Z"
              fill="#6C4852"></path>
          </svg>

          <div
            class="absolute -bottom-xxxs right-xs w-3xl h-3xl bg-brand-yellow rounded-full"
          >
          </div>
        </div>
        <div>
          <h3>Vores risteri</h3>
          <div class="gap-ml py-xs">
            <p>
              Al kaffen ristes i små portioner og pakkes efterfølgende i hånden.
              Hver dag sender vi pakker til hele verden med god friskristet
              kaffe, ristet efter unikke profiler, der løbende udvikles efter
              bønnernes potentiale.
            </p>
          </div>
        </div>
      </div>

      <div>
        <div class="relative w-[378px] h-[396px]">
          <!-- SVG background -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 378 396"
            class="absolute inset-0 w-full h-full"
            fill="none"
          >
            <path
              d="M378 396H0V0H221.642C241.509 0 257.614 16.105 257.614 35.9716C257.614 75.7047 289.824 107.915 329.557 107.915H338C360.091 107.915 378 125.823 378 147.915V396Z"
              fill="#6C4852"></path>
          </svg>

          <!-- Tal "3" -->
          <div
            class="absolute top-xxxs right-xs w-3xl h-3xl bg-brand-yellow rounded-full"
          >
          </div>
        </div>
        <div>
          <h3>Lej os til dit event</h3>
          <div class="gap-ml py-xs">
            <p>
              Nordhavn Coffee tilbyder en unik kaffeoplevelse til dine events.
              Vores mobile kaffebarer og specialdesignede køretøjer er perfekte
              til at tilføje et strejf af elegance og god smag til enhver
              lejlighed.
            </p>
          </div>
        </div>
      </div>
    </section>
    <!-- historie -->

    <section
      class={`sticky top-0 min-h-screen w-screen bg-cover bg-center ${bgcolor1} pt-10 grid grid-rows-[auto_1fr_auto_auto_auto_auto_auto] grid-cols-5 md:grid-cols-[0.1fr_1fr_0.8fr_0.8fr_0.1fr_0.1fr]  md:py-10xl mangeelementerinview`}
      id="kaffe-section-1"
    >
      <!-- Indhold her -->

      <div
        class="col-span-full row-span-full grid-rows-subgrid grid-cols-subgrid grid"
      >
        <div class="col-start-1 md:row-start-1 md:col-start-2">
          <h2 class={`${textcolor1}`}>SINGLE</h2>
          <h1 class={`text-8xl ${textcolor1}`}>{navn1}</h1>
        </div>

        <!--billede-->
        <article
          class="relative grid justify-center col-start-1 py-m md:col-start-4 md:col-end-4 md:row-span-full md:row-end-4 hover:origin-center"
        >
          <!-- Marcala billede -->
          <div
            class="md:absolute inset-0 md:flex md:justify-end md:items-center"
          >
            <img
              src="src/assets/images/kaffe/marcala.webp"
              alt="kaffe"
              class="w-[100px] md:w-[250px] h-auto object-cover mangeelementer1 z-50"
            />
          </div>
          <!-- Kaffebønner billede -->
          <div class="md:absolute inset-0 flex justify-center items-center">
            <img
              src="/kaffebønner.webp"
              alt="bønner"
              class="w-[100px] md:w-[250px] h-auto object-cover mangeelementer2 z-20"
            />
          </div>

          <!-- Kaffebønner billede -->
          <div class="md:absolute inset-0 flex justify-center items-center">
            <img
              src="/kaffebønner.webp"
              alt="bønner"
              class="w-[100px] md:w-[250px] h-auto object-cover mangeelementer3 z-20"
            />
          </div>
        </article>

        <!-- slut -->

        <!--tekst-->
        <h3
          class={`${textcolor1} row-start-3 col-start-1 col-end-4 md:row-start-2 md:text-2xl md:col-start-2 `}
        >
          80 - 275 DKK
        </h3>

        <h2
          class={`${textcolor1} text-m row-start-4 col-start-1 col-end-6 md:col-start-2 md:row-start-5 self-end md:text-2xl`}
        >
          BYG DIT EGET ABONNEMENT
        </h2>
        <!-- slut -->

        <!-- SINGLE BUTTON ------>
        <div
          class="flex col-start-2 col-end-6 row-start-5 md:justify-start md:col-start-2 md:row-start-6"
        >
          <Link
            size="medium"
            variant="textlink"
            size="medium"
            href="/singleview"
          >
            <button
              class={`col-start col-end-6 px-lg py-xs border-2  ${bgcolor3} ${textcolor3} font-bold text-xl ${bghovercolor3} ${texthovercolor3} transition`}
            >
              KØB NU
              <span class="ml-2">→</span>
            </button>
          </Link>
        </div>
        <!-- SINGLE BUTTON slut ------>
      </div>

      <div
        class="flex items-center row-start-6 col-start-2 md:justify-start md:col-start-5 md:row-start-4"
      >
        <a href="#kaffe-section-4">
          <button
            class={`w-xl h-xl flex items-center justify-center rounded-full border-2 ${bordercolor1} ${bgcolor1} ${textcolor1} ${bghovercolor1} ${texthovercolor1} transition`}
          >
            Sidste
          </button>
        </a>
      </div>

      <div
        class="items-center row-start-6 col-start-3 md:justify-start md:col-start-5 md:row-start-5"
      >
        <h2
          class={`${textcolor1}  md:justify-start md:col-start-5 md:row-start-5 text-s`}
        >
          1/4
        </h2>
      </div>

      <div
        class="flex items-center row-start-6 col-start-4 md:justify-start md:col-start-5 md:row-start-6"
      >
        <a href="#kaffe-section-2">
          <button
            class={`w-xl h-xl flex items-center justify-center rounded-full border-2 ${bordercolor1} ${bgcolor1} ${textcolor1} ${bghovercolor1} ${texthovercolor1} transition`}
          >
            Næste
          </button>
        </a>
      </div>
    </section>

    <section class="px-s md:px-2xl py-3xl">
      <h1>HØR VORES HISTORIE</h1>
      <div class="grid md:grid-cols-2 gap-ml py-xs">
        <p>
          Vores rejse startede i 2007, hvor vi opfandt den mobile kaffebranche i
          Danmark og banede vejen for den gode, hurtige kop kaffe, serveret lige
          der hvor den drikkes.  Vi konstruerede selv den første trehjulede
          kaffebil, der ikke kun bragte kvalitetskaffe, men også satte
          standarden for innovation inden for kaffe og eventcatering. Gennem
          kompetente og servicemindede baristaer blev budskabet om den gode kop
          kaffe hurtigt en del af vores identitet.
        </p>

        <Image src={Historie1} alt="" />
        <div class="py-xs">
          <h3>VI ÅBNER VORES CAFÉ</h3>
          <div class="grid md:grid-cols-2 gap-ml">
            <p>
              Vores rejse startede i 2007, hvor vi opfandt den mobile
              kaffebranche i Danmark og banede vejen for den gode, hurtige kop
              kaffe, serveret lige der hvor den drikkes.  Vi konstruerede selv
              den første trehjulede kaffebil, der ikke kun bragte
              kvalitetskaffe, men også satte standarden for innovation inden for
              kaffe og eventcatering. Gennem kompetente og servicemindede
              baristaer blev budskabet om den gode kop kaffe hurtigt en del af
              vores identitet.
            </p>
            <p>
              Vores identitet ligger ganske vist i Københavns Nordhavn, men for
              at nærme os byen har vi åbnet egen cafe i indre by. Her stræbes
              efter at præsentere de bedste sider af kafferne, komplimenteret
              med lette caferetter og særarrangementer. Baristaerne er uddannet
              hos os og kan svare på alle spørgsmål om kaffe og anbefalede
              bryggemetoder. Cafeen er åben, men kan også bookes til private
              arrangementer til mindre selskaber.
            </p>
          </div>
        </div>
        <Image src={Historie2} alt="" />
      </div>
    </section>
    <section class="bg-brand-yellow py-xl grid grid-cols-4 grid-rows-1">
      <div class="md:px-2xl row-start-2 col-span-4 md:col-span-2 z-10">
        <h1>FAQ</h1>

        <div class="border-y-2 border-b-rosa-900">
          <button class="accordion bg-brand-yellow w-full text-left">
            <h3>AFBESTILLING</h3>
          </button>
          <div class="panel">
            <p>
              Efter at have fulgt de trin, der er skitseret i den generelle
              administrationsdel øverst på denne side, gå til punktet
              ”Administration eller Ændring eller Handling eller Håndtering”,
              hvor du skal klikke på punktet ”Rediger”. Herfra skal du klikke på
              punktet nederst ”Annullering”. Dit abonnement er nu annulleret.
            </p>
          </div>
        </div>

        <div class="border-b-2 border-rosa-900">
          <button class="accordion w-full text-left">
            <h3>ÅBNINGSTIDER</h3>
          </button>
          <div class="panel">
            <ul>
              <li>
                <p>• Mandag til fredag: 07:45 – 17:00</p>
              </li>
              <li>
                <p>• Lørdag: 10:00 – 17:00</p>
              </li>
              <li>
                <p>• Søndag: 10:00 – 17:00</p>
              </li>
            </ul>
          </div>
        </div>

        <div class="border-b-2 border-b-rosa-900">
          <button class="accordion w-full text-left">
            <h3>LEVERING</h3>
          </button>
          <div class="panel">
            <p>
              Leveringstiden for din ordre er 1-3 hverdage. Nordhavn Coffee ApS
              afsender varer med følgende: GLS – Erhverv. Fragten bliver
              beregnet ud fra vægt. Du vil kunne vælge mellem at få pakken sendt
              “uden omdeling” eller “med omdeling”. Du vil altid modtage et
              track and trace nr., så du kan følge din pakke fra vores lager og
              hjem til dig.
            </p>
          </div>
        </div>
      </div>
      <div class="col-start-4 row-start-2 z-20 hidden md:block">
        <img src="public/mand.webp" alt="mand" />
      </div>
      <div class="col-start-3 row-start-2 z-10 hidden md:block">
        <img src="public/risteri.webp" alt="risteri" />
      </div>
    </section>

    <!-- Nyhedsbrev Component -->
    <section class="bg-brand-rosa md:px-2xl py-3xl flex flex-col items-start">
      <h3
        class="text-brand-purple text-start text-xl md:text-3xl font-semibold mb-6"
      >
        TILMELD DIG VORES NYHEDSBREV <br /> OG FÅ OPDATERINGER OM DE NYESTE RISTNINGER
      </h3>
      <form class="w-full flex">
        <input
          type="email"
          placeholder="Din emailadresse..."
          class="flex-grow p-3 mt-xs border-none focus:outline-none focus:ring-2"
        />
        <button
          type="submit"
          class="bg-brand-rosa text-beige-50 font-semibold hover:bg-brand-purple transition duration-300"
        >
          TILMELD
        </button>
      </form>
    </section>
  </article>

  <script>
    import { animate, scroll } from "motion";

    /* sektion 4 parralax */
    scroll(animate(".parallaxgrafik1_4", { y: [200, -800] }), {
      target: document.querySelector(".parallaxgrafik1_4"),
      offset: ["start end", "end start"],
    });

    scroll(animate(".parallaxgrafik2_4", { y: [4000, -100] }), {
      target: document.querySelector(".parallaxgrafik2_4"),
      offset: ["start end", "end start"],
    });

    scroll(animate(".parallaxgrafik3_4", { y: [800, -200] }), {
      target: document.querySelector(".parallaxgrafik3_4"),
      offset: ["start end", "end start"],
    });

    scroll(animate(".parallaxgrafik4_4", { y: [600, -500] }), {
      target: document.querySelector(".parallaxgrafik4_4"),
      offset: ["start end", "end start"],
    });

    scroll(animate(".parallaxgrafik5_4", { y: [-100, 50] }), {
      target: document.querySelector(".parallaxgrafik5_4"),
      offset: ["start end", "end start"],
    });

    // Accordion funktion
    var acc = document.getElementsByClassName("accordion");
    var i;

    // Loop igennem alle accordion-knapper
    for (i = 0; i < acc.length; i++) {
      var panel = acc[i].nextElementSibling; // Få tilhørende panel
      if (panel) {
        panel.style.display = "none"; // Skjul alle paneler ved sideindlæsning
      }

      acc[i].addEventListener("click", function () {
        // Toggle panel-visning
        var panel = this.nextElementSibling;

        if (panel.style.display === "block") {
          panel.style.display = "none";
        } else {
          panel.style.display = "block";
        }
      });
    }
  </script>
</MainLayout>
