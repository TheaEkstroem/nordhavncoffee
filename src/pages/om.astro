---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import Kaffebønne1 from "../assets/images/kaffebønner/kaffebønne1.webp";
import Kaffebønne2 from "../assets/images/kaffebønner/kaffebønne2.webp";
import Kaffebønne3 from "../assets/images/kaffebønner/kaffebønne3.webp";
import nordhavnkaffe from "../assets/images/om/kaffebutik.png";
import Kaffepose from "../assets/images/om/kaffepose.png";
import Nordhavnkop from "../assets/images/om/kaffekop.png";
import Kaffebil from "../assets/images/om/kaffebil.png";
