---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import Marcala from "../assets/images/kaffe/marcala.webp";
import Cajamarca from "../assets/images/kaffe/cajamarca.webp";
import Modernespresso from "../assets/images/kaffe/modernitalianespresso.webp";
import Darkespresso from "../assets/images/kaffe/darkespresso.webp";
import Espressoblendno3 from "../assets/images/kaffe/espresso-blend3.webp";
import Havensfilter from "../assets/images/kaffe/havnensfilter.webp";
import Velvetespresso from "../assets/images/kaffe/velvet-esp.webp";
import Smallproduct from "../components/smallproduct.astro";
---

<MainLayout title="Enkel Poser">
  <article>
    <!-- om produktsektion -->
    <section class="bg-brand-rosa py-ml">
      <div class="px-s md:px-2xl grid md:grid-cols-2">
        <div></div>
        <div>
          <h1 class="text-brand-purple">MARCALA</h1>
          <hr class="text-background-white" />
          <h4 class="text-font-white">Fra 170,00 kr. /måned</h4>
        </div>
      </div>
      <!-- billede -->
      <div
        class="px-s md:px-2xl py-xs md:py-xl grid md:grid-cols-2 justify-items-center"
      >
        <Image
          src={Marcala}
          alt="Marcala"
          class="w-[150px] md:w-[300px] h-auto object-fit md:-mt-sm pb-s"
        />
        <div>
          <p class="text-font-white">
            Espressoen er, som navnet antyder, en mørkristet espresso udgave af
            kaffen fra Marcala regionen i Honduras, bestående af Bourbon,
            Catuai, Caturra og Typica varianterne. Kaffen har en høj naturlig
            sødme og rundhed, med meget lav syrlighed, som forsvinder helt i
            mælkebaserede kaffer. Prøv den rent eller som hovedingrediens i
            Modern Italian Espresso. Kaffen stammer fra Marcala-regionen i
            Honduras og leveres af COMSA-kooperativet. COMSA er et andelsselskab
            i Honduras og består af omkring 200 familiedrevne gårde der leverer
            deres høst til en fælles vådmølle hvor kaffefrugterne bearbejdes.
          </p>

          <h4 class="text-font-white py-xs">Byg dit abonnement</h4>

          <!-- cards med de andre produkter man kan vælge i sit abonnement -->
          <div class="flex gap-xs md:gap-ml">
            <Smallproduct
              bgcolor="bg-background-rosa"
              imagealt="Billede af cajamarca kaffepose"
              image="cajamarca.webp"
            />

            <Smallproduct
              bgcolor="bg-background-rosa"
              imagealt="Billede af espresso-blend kaffepose"
              image="espresso-blend3.webp"
            />
            <Smallproduct
              bgcolor="bg-background-rosa"
              imagealt="Billede af havnensfilter kaffepose"
              image="havnensfilter.webp"
            />
            <Smallproduct
              bgcolor="bg-background-rosa"
              imagealt="Billede af modern italian espresso kaffepose"
              image="modernitalianespresso.webp"
            />
          </div>

          <!-- form, til at vælge hvordan ens abonnement skal være -->
          <div class="space-y-xs">
            <!-- Grindstyle -->
            <div class="flex items-center justify-between">
              <label class="text-font-white text-lg font-futura block"
                >Grindstyle</label
              >
              <select
                class="mt-1 block bg-brand-purple text-brand-rosa border border-brand-purple px-4 py-2 w-4/5"
              >
                <option>Vælg mulighed</option>
                <option>Espresso</option>
                <option>Filter</option>
                <option>Moka Pot</option>
                <option>Stempel</option>
                <option>Whole Beans</option>
              </select>
            </div>

            <!-- Størrelse -->
            <div class="flex items-center justify-between">
              <label class="text-font-white text-lg font-futura block"
                >Størrelse</label
              >
              <select
                class="mt-1 block bg-brand-purple text-brand-rosa border border-brand-purple px-4 py-2 w-4/5"
              >
                <option>500 g</option>
                <option>1000 g</option>
              </select>
            </div>

            <!-- Hyppighed -->
            <div class="flex items-center justify-between">
              <label class="text-font-white text-lg font-futura block"
                >Hyppighed</label
              >
              <select
                class="mt-1 block bg-brand-purple text-brand-rosa border border-brand-purple px-4 py-2 w-4/5"
              >
                <option>Hver 14 dag</option>
                <option>Hver måned</option>
              </select>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- hvordan virker abonnementet -->
    <div
      class="bg-background-beige flex flex-col justify-center px-s md:px-2xl py-3xl"
    >
      <h3>HVORDAN VIRKER ABBONEMENTET?</h3>
      <h4>Svar på hvordan vores abonnement fungere</h4>

      <!-- min-h-screen -->
      <div
        class="grid grid-cols-1 md:grid-cols-3 gap-xl py-sm md:py-3xl md:px-xl"
      >
        <!-- step 1 -->
        <div class="relative w-[378px] h-[396px]">
          <!-- SVG background -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 378 396"
            class="absolute inset-0 w-full h-full"
            fill="none"
          >
            <path
              d="M378 396H0V0H221.642C241.509 0 257.614 16.105 257.614 35.9716C257.614 75.7047 289.824 107.915 329.557 107.915H338C360.091 107.915 378 125.823 378 147.915V396Z"
              fill="#6C4852"></path>
          </svg>

          <!-- Tal "1" -->
          <div
            class="absolute top-xxxs right-xs w-xl h-xl flex items-center justify-center bg-brand-purple font-bold text-white text-6xl font-futura rounded-full"
          >
            1
          </div>

          <!--  text -->
          <div
            class="flex flex-col items-center justify-center absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[319px]"
          >
            <h4 class="font-bold text-font-white text-center mb-2">
              VÆLG DIT ABONNEMENT
            </h4>
            <h5 class="text-font-white text-center">
              Vælg selv eller få os til at hjælpe dig
            </h5>
          </div>
        </div>

        <!-- step 2 -->
        <div class="relative w-[378px] h-[396px]">
          <!-- SVG background -->

          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="378"
            height="396"
            viewBox="0 0 378 396"
            fill="none"
            class="absolute inset-0 w-full h-full"
          >
            <path
              d="M378 0H0V396H221.642C241.509 396 257.614 379.895 257.614 360.028C257.614 320.295 289.824 288.085 329.557 288.085H338C360.091 288.085 378 270.177 378 248.085V0Z"
              fill="#6C4852"></path>
          </svg>

          <!-- tal  "2" -->
          <div
            class="absolute -bottom-xxxs right-xs w-xl h-xl flex items-center justify-center bg-brand-purple font-bold text-white text-6xl font-futura rounded-full"
          >
            2
          </div>

          <!--  text -->
          <div
            class="flex flex-col items-center justify-center absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[319px]"
          >
            <h4 class="font-bold text-font-white text-center mb-2">
              VÆLG DIN PRÆFENRENCE OG HYPPIGHED
            </h4>
            <h5 class="text-font-white text-center">
              Vælg hvor ofte du vil få leveret din kaffe.
            </h5>
          </div>
        </div>

        <!-- step 3 -->
        <div class="relative w-[378px] h-[396px]">
          <!-- SVG background -->
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 378 396"
            class="absolute inset-0 w-full h-full"
            fill="none"
          >
            <path
              d="M378 396H0V0H221.642C241.509 0 257.614 16.105 257.614 35.9716C257.614 75.7047 289.824 107.915 329.557 107.915H338C360.091 107.915 378 125.823 378 147.915V396Z"
              fill="#6C4852"></path>
          </svg>

          <!-- Tal "3" -->
          <div
            class="absolute top-xxxs right-xs w-xl h-xl flex items-center justify-center bg-brand-purple font-bold text-white text-6xl font-futura rounded-full"
          >
            3
          </div>

          <!-- text -->
          <div
            class="flex flex-col items-center justify-center absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[319px]"
          >
            <h4 class="font-bold text-font-white text-center mb-2">
              LÆN DIG TILBAGE DIN KAFFE ER PÅ VEJ
            </h4>
            <h5 class="text-font-white text-center">Så nemt er det!</h5>
          </div>
        </div>
      </div>
    </div>

    <!-- citat -->
    <div class="flex flex-col justify-center px-s md:px-2xl py-10xl">
      <h3 class="pb-s font-bold">
        “En god kop kaffe med ærlig og ren samvittighed.”
      </h3>
      <h4 class="pb-s">
        Vi forpligter os til at arbejde for at fremme bæredygtighed og kvalitet.
        Kaffen købes kun fra producenter og kun fra kooperativer som aktivt
        arbejder for lokal bæredygtighed, uddannelse og ligestilling. Kaffen
        ristes selvfølgelig efter den gode smag, men også med fokus på at
        effektivisere og minimere energiforbrug
      </h4>
      <h4>
        Velkommen til Nordhavn Coffee - Hvor lidenskab for kaffe og engagement i
        at skabe mindeværdige øjeblikke forenes
      </h4>
    </div>

    <!-- pakkeløsning  -->
    <div
      class="bg-beige-500 flex flex-col justify-center px-s md:px-2xl py-3xl"
    >
      <h3>HVORDAN VIRKER ABBONEMENTET?</h3>
      <h4>Svar på hvordan vores abonnement fungere</h4>

      <div
        class="grid grid-cols-1 md:grid-cols-3 gap-xl py-sm md:py-3xl md:px-xl"
      >
        <!-- FARVORITTER -->
        <div>
          <div class="bg-purple-500 w-[380px] h-[380px] p-s">
            <h3 class="font-bold text-center pb-xs">FARVORITTER</h3>
            <div class="flex justify-center">
              <div
                class="relative bg-white shadow-lg rounded-md -rotate-12 -mr-sm z-10"
              >
                <Image
                  src={Espressoblendno3}
                  alt="nordhavncoffee logo"
                  class="w-[130px] h-auto object-fit"
                />
              </div>

              <div class="relative bg-white shadow-lg rounded-md z-20">
                <Image
                  src={Cajamarca}
                  alt="nordhavncoffee logo"
                  class="w-[130px] h-auto object-fit"
                />
              </div>

              <div
                class="relative bg-white shadow-lg rounded-md rotate-12 -ml-sm z-10"
              >
                <Image
                  src={Havensfilter}
                  alt="nordhavncoffee logo"
                  class="w-[130px] h-auto object-fit"
                />
              </div>
            </div>
          </div>

<!-- mangler rigtig knap  -->

          <Link size="large" variant="button" size="medium" href="/">KØB</Link>
        </div>

        <!-- spicy -->
        <div>
          <div class="bg-purple-500 w-[380px] h-[380px] p-s">
            <h3 class="font-bold text-center pb-xs">SPICY MIX</h3>
            <div class="flex justify-center">
              <div
                class="relative bg-white shadow-lg rounded-md -rotate-12 -mr-sm z-10"
              >
                <Image
                  src={Espressoblendno3}
                  alt="nordhavncoffee logo"
                  class="w-[130px] h-auto object-fit"
                />
              </div>

              <div class="relative bg-white shadow-lg rounded-md z-20">
                <Image
                  src={Cajamarca}
                  alt="nordhavncoffee logo"
                  class="w-[130px] h-auto object-fit"
                />
              </div>

              <div
                class="relative bg-white shadow-lg rounded-md rotate-12 -ml-sm z-10"
              >
                <Image
                  src={Havensfilter}
                  alt="nordhavncoffee logo"
                  class="w-[130px] h-auto object-fit"
                />
              </div>
            </div>
          </div>

          <!-- mangler rigtig knap  -->

          <Link size="large" variant="button" size="medium" href="/">KØB</Link>
        </div>

        <!-- BLAND SELV -->
        <div>
          <div class="bg-purple-500 w-[380px] h-[380px] p-s">
            <h3 class="font-bold text-center pb-xs">BLAND SELV</h3>
            <div class="flex justify-center">
              <div
                class="relative bg-white shadow-lg rounded-md -rotate-12 -mr-sm z-10"
              >
                <Image
                  src={Espressoblendno3}
                  alt="nordhavncoffee logo"
                  class="w-[130px] h-auto object-fit"
                />
              </div>

              <div class="relative bg-white shadow-lg rounded-md z-20">
                <Image
                  src={Modernespresso}
                  alt="nordhavncoffee logo"
                  class="w-[130px] h-auto object-fit"
                />
              </div>

              <div
                class="relative bg-white shadow-lg rounded-md rotate-12 -ml-sm z-10"
              >
                <Image
                  src={Havensfilter}
                  alt="nordhavncoffee logo"
                  class="w-[130px] h-auto object-fit"
                />
              </div>
            </div>
          </div>
          <!-- mangler rigtig knap  -->

          <Link size="large" variant="button" size="medium" href="/">KØB</Link>
        </div>
      </div>
    </div>

    <!-- MÅSKE DU VIL KUNNE LIDE -->
     <div class="flex flex-col justify-center px-s md:px-2xl py-3xl">

      <h3>MÅSKE DU VIL KUNNE LIDE</h3>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-xl py-sm md:py-3xl md:px-xl">
        <div
          class="w-[380px] h-[410px] p-s"
          style="background-image: url('/kaffelilla.webp'); background-position: center;"
        >
          <div class="flex justify-center z-20">
            <div class="relative  py-xs">
              <Image
                src={Velvetespresso}
                alt="nordhavncoffee Velvetespresso"
                class="w-[130px] h-auto object-fit"
              />
            </div>
          </div>
          <h3 class="font-extrabold text-center text-brand-yellow">
            VELVET ESPRESSO
          </h3>
        </div>
  
        <div
          class="w-[380px] h-[410px] p-s"
          style="background-image: url('/kaffegul.webp'); background-position: center;"
        >
          <div class="flex justify-center z-20">
            <div class="relative  py-xs">
              <Image
                src={Havensfilter}
                alt="nordhavncoffee Havensfilter"
                class="w-[130px] h-auto object-fit"
              />
            </div>
          </div>
          <h3 class="font-extrabold text-center text-brand-purple">
            HAVNENS BLEND
          </h3>
        </div>
  
        <div
          class="w-[380px] h-[410px] p-s"
          style="background-image: url('/kaffeblaa.webp'); background-position: center;"
        >
          <div class="flex justify-center z-20">
            <div class="relative  py-xs">
              <Image
                src={Modernespresso}
                alt="nordhavncoffee MODERN ITALIAN"
                class="w-[130px] h-auto object-fit"
              />
            </div>
          </div>
          <h3 class="font-extrabold text-center text-font-white">
            MODERN ITALIAN
          </h3>
        </div>
      </div>

     </div>
   
  </article>
</MainLayout>
